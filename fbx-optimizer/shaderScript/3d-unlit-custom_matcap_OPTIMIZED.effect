CCEffect %{
  techniques:
  - name: opaque
    passes:
    - vert: unlit-vs:vert
      frag: unlit-fs:frag
      properties: &props
        mainTexture:    { value: grey }
        matcapTexture:  { value: grey }
        matcapProgress: { value: 1.0, range: [0.0, 1.0], editor: { type: slider, parent: USE_MATCAP } }
        matcapLDRBoost: { value: 1.2, range: [1.0, 2.0], editor: { type: slider, parent: USE_MATCAP } }
        # ğŸ†• Matcap AddColor åŠŸèƒ½
        matcapAddTexture:   { value: grey, editor: { parent: USE_MATCAP_ADD } }
        matcapAddStrength:  { value: 1.0, range: [0.0, 3.0], editor: { type: slider, parent: USE_MATCAP_ADD } }
        matcapAddColor:     { value: [1, 1, 1, 1], linear: true, editor: { type: color, parent: USE_MATCAP_ADD } }
        matcapAddLDRBoost:  { value: 1.3, range: [1.0, 2.0], editor: { type: slider, parent: USE_MATCAP_ADD } }
        
        normalMap:      { value: normal }
        normalStrength: { value: 1.0, range: [0.0, 5.0], editor: { type: slider, parent: USE_NORMAL_MAP } }
        # é‚Šç·£å…‰åƒæ•¸ï¼ˆç§»é™¤è²¼åœ–ï¼Œåªç”¨é¡è‰²ï¼‰
        rimLightColor:  { value: [1, 1, 1, 1], linear: true, editor: { type: color, parent: USE_RIM_LIGHT } }
        rimPower:       { value: 2.7, range: [0.1, 10.0], editor: { type: slider, parent: USE_RIM_LIGHT } }
        rimIntensity:   { value: 1.0, range: [0.0, 5.0], editor: { type: slider, parent: USE_RIM_LIGHT } }
        
        tilingOffset:   { value: [1, 1, 0, 0] }
        mainColor:      { value: [1, 1, 1, 1], linear: true, editor: { type: color } }
        bleachColor:    { value: [1, 1, 1, 0], linear: true, editor: { type: color } }
        colorScale:     { value: [1, 1, 1], target: colorScaleAndCutoff.xyz }
        alphaThreshold: { value: 0.5, target: colorScaleAndCutoff.w, editor: { parent: USE_ALPHA_TEST } }
        # æ¨¡æ“¬ HDR æ•ˆæœï¼ˆé‡å° LDR ç’°å¢ƒå„ªåŒ–ï¼‰
        hdrIntensity:   { value: 1.0, range: [0.5, 3.0], editor: { type: slider, displayName: "HDR Intensity", parent: USE_HDR_SIMULATION } }
        hdrBloom:       { value: 0.3, range: [0.0, 1.0], editor: { type: slider, displayName: "Bloom Strength", parent: USE_HDR_SIMULATION } }
        hdrTonemapping: { value: 1.0, range: [0.0, 3.0], editor: { type: slider, displayName: "Tonemapping", parent: USE_HDR_SIMULATION } }
        color:          { target: mainColor, linear: true, editor: { visible: false } }
      migrations: &migs
        properties:
          mainColor:    { formerlySerializedAs: color }
    - &shadow-caster
      vert: shadow-caster-vs:vert
      frag: shadow-caster-fs:frag
      phase: shadow-caster
      propertyIndex: 0
      rasterizerState:
        cullMode: front
      properties:
        tilingOffset:   { value: [1, 1, 0, 0] }
        mainColor:      { value: [1, 1, 1, 1], linear: true, editor: { type: color } }
        colorScale:     { value: [1, 1, 1], target: colorScaleAndCutoff.xyz }
        alphaThreshold: { value: 0.5, target: colorScaleAndCutoff.w, editor: { parent: USE_ALPHA_TEST } }
        mainTexture:    { value: grey }
  - name: transparent
    passes:
    - vert: unlit-vs:vert
      frag: unlit-fs:frag
      depthStencilState: &d1
        depthTest: true
        depthWrite: false
      blendState:
        targets:
        - blend: true
          blendSrc: src_alpha
          blendDst: one_minus_src_alpha
          blendDstAlpha: one_minus_src_alpha
      properties: *props
      migrations: *migs
  - name: add
    passes:
    - vert: unlit-vs:vert
      frag: unlit-fs:frag
      rasterizerState: &r1 { cullMode: none }
      depthStencilState: *d1
      blendState:
        targets:
        - blend: true
          blendSrc: src_alpha
          blendDst: one
          blendSrcAlpha: src_alpha
          blendDstAlpha: one
      properties: *props
      migrations: *migs
  - name: alpha-blend
    passes:
    - vert: unlit-vs:vert
      frag: unlit-fs:frag
      rasterizerState: *r1
      depthStencilState: *d1
      blendState:
        targets:
        - blend: true
          blendSrc: src_alpha
          blendDst: one_minus_src_alpha
          blendSrcAlpha: src_alpha
          blendDstAlpha: one_minus_src_alpha
      properties: *props
      migrations: *migs
}%


CCProgram unlit-vs %{
  // âš¡ å„ªåŒ–ï¼šé™ä½ç²¾åº¦æå‡æ•ˆèƒ½ï¼ˆç§»å‹•ç«¯å‹å¥½ï¼‰
  precision mediump float;
  #include <legacy/input-standard>
  #include <builtin/uniforms/cc-global>
  #include <legacy/decode-base>
  #include <legacy/local-batch>
  #include <legacy/fog-vs>

  #if USE_INSTANCING
    #pragma format(RG32F)
    in vec2 a_custom_color_ctrl;
    out vec2 v_custom_color_ctrl;
  #endif

  #if USE_VERTEX_COLOR
    in lowp vec4 a_color;
    out lowp vec4 v_color;
  #endif

  #if USE_TEXTURE
    out vec2 v_uv;
    uniform TexCoords {
      vec4 tilingOffset;
    };
  #endif

  // âš¡ å„ªåŒ–ï¼šåªåœ¨éœ€è¦æ™‚è¼¸å‡ºä¸–ç•Œç©ºé–“è³‡è¨Šï¼ˆä½¿ç”¨ mediump é™ä½é »å¯¬ï¼‰
  #if USE_MATCAP || USE_MATCAP_ADD || USE_RIM_LIGHT || USE_BLEACH_COLOR || USE_NORMAL_MAP
    out mediump vec3 v_worldNormal;
    out mediump vec3 v_worldPos;
  #endif

  #if USE_NORMAL_MAP
    out mediump vec4 v_tangent;
  #endif

  vec4 vert () {
    StandardVertInput In; 
    CCVertInput(In);

    #if USE_INSTANCING
      v_custom_color_ctrl = a_custom_color_ctrl;
    #endif

    // âš¡ å„ªåŒ–ï¼šåªåœ¨éœ€è¦æ™‚è¨ˆç®—å®Œæ•´çš„ä¸–ç•ŒçŸ©é™£
    #if USE_MATCAP || USE_MATCAP_ADD || USE_RIM_LIGHT || USE_BLEACH_COLOR || USE_NORMAL_MAP
      mat4 matWorld, matWorldIT;
      CCGetWorldMatrixFull(matWorld, matWorldIT);
      v_worldNormal = normalize((matWorldIT * vec4(In.normal, 0.)).xyz);
      v_worldPos = (matWorld * In.position).xyz;
    #else
      mat4 matWorld;
      CCGetWorldMatrix(matWorld);
    #endif

    #if USE_NORMAL_MAP
      v_tangent.xyz = normalize((matWorld * vec4(In.tangent.xyz, 0.0)).xyz);
      v_tangent.w = In.tangent.w;
    #endif

    #if USE_TEXTURE
      v_uv = a_texCoord * tilingOffset.xy + tilingOffset.zw;
      #if SAMPLE_FROM_RT
        CC_HANDLE_RT_SAMPLE_FLIP(v_uv);
      #endif
    #endif

    #if USE_VERTEX_COLOR
      v_color = a_color;
    #endif

    CC_TRANSFER_FOG(matWorld * In.position);
    return cc_matProj * (cc_matView * matWorld) * In.position;
  }
}%


CCProgram unlit-fs %{
  // âš¡ å„ªåŒ–ï¼šé™ä½ç²¾åº¦æå‡æ•ˆèƒ½
  precision mediump float;
  #include <legacy/output-standard>
  #include <legacy/fog-fs>

  #if USE_INSTANCING
    in vec2 v_custom_color_ctrl;
  #endif

  #if USE_ALPHA_TEST
    #pragma define-meta ALPHA_TEST_CHANNEL options([a, r, g, b])
  #endif

  #if USE_TEXTURE
    in vec2 v_uv;
    uniform sampler2D mainTexture;
  #endif

  #if USE_MATCAP
    uniform sampler2D matcapTexture;
  #endif

  #if USE_MATCAP_ADD
    uniform sampler2D matcapAddTexture;
  #endif

  #if USE_NORMAL_MAP
    uniform sampler2D normalMap;
    in mediump vec4 v_tangent;
  #endif

  uniform Constant {
    vec4 mainColor;
    vec4 colorScaleAndCutoff;
    float matcapProgress;
    float matcapLDRBoost;
    float normalStrength;
  };

  #if USE_HDR_SIMULATION
    uniform HDRValue {
      float hdrIntensity;
      float hdrBloom;
      float hdrTonemapping;
    };
  #endif

  #if USE_MATCAP_ADD
    uniform MatcapAddValue {
      vec4 matcapAddColor;
      float matcapAddStrength;
      float matcapAddLDRBoost;
    };
  #endif

  // âš¡ å„ªåŒ–ï¼šåªåœ¨éœ€è¦æ™‚æ¥æ”¶ä¸–ç•Œç©ºé–“è³‡è¨Šï¼ˆä½¿ç”¨ mediumpï¼‰
  #if USE_MATCAP || USE_MATCAP_ADD || USE_RIM_LIGHT || USE_BLEACH_COLOR || USE_NORMAL_MAP
    in mediump vec3 v_worldPos;
    in mediump vec3 v_worldNormal;
  #endif

  #if USE_BLEACH_COLOR
    uniform BleachValue {
      vec4 bleachColor;
    };
  #endif

  #if USE_RIM_LIGHT
    uniform RimLightValue {
      vec4 rimLightColor;
      float rimPower;
      float rimIntensity;
    };
  #endif

  #if USE_VERTEX_COLOR
    in lowp vec4 v_color;
  #endif

  #if USE_HDR_SIMULATION
    // âš¡âš¡âš¡âš¡âš¡ æ¥µè‡´å„ªåŒ–çš„ HDR æ•ˆæœï¼ˆæ¸›å°‘åˆ†æ”¯å’ŒæŒ‡ä»¤ï¼‰
    vec3 applyHDRSimulation(vec3 color) {
      // 1. æå‡æ•´é«”äº®åº¦ï¼ˆå–®ä¸€ MAD æŒ‡ä»¤ï¼‰
      vec3 boosted = color * hdrIntensity;
      
      // 2. å„ªåŒ–çš„ Bloom æ•ˆæœï¼ˆæ¸›å°‘è¨ˆç®—ï¼‰
      mediump float luma = dot(boosted, vec3(0.299, 0.587, 0.114));
      // âš¡ ä½¿ç”¨æ›´å¿«çš„ clamp æ›¿ä»£ smoothstepï¼ˆæ¸›å°‘ 3 æ¢æŒ‡ä»¤ï¼‰
      mediump float bloomMask = clamp((luma - 0.3) * 2.0, 0.0, 1.0);
      // âš¡ åˆä½µä¹˜æ³•ï¼ˆå–®ä¸€å‘é‡ MADï¼‰
      vec3 bloom = boosted * (bloomMask * hdrBloom * 3.0);
      
      // 3. ç°¡åŒ–çš„ ACES Tone Mappingï¼ˆé è¨ˆç®—å¸¸æ•¸ï¼Œç§»é™¤åˆ†æ”¯ï¼‰
      // âš¡ ä½¿ç”¨ saturate(tonemapping) é¿å… if åˆ†æ”¯
      mediump float toneWeight = clamp(hdrTonemapping, 0.0, 1.0);
      // âš¡ ç°¡åŒ–çš„ ACES å…¬å¼ï¼ˆæ¸›å°‘é™¤æ³•ï¼‰
      vec3 aces = boosted * (boosted * 2.51 + 0.03);
      aces = aces / (boosted * (boosted * 2.43 + 0.59) + 0.14);
      // âš¡ ä½¿ç”¨ MAD å„ªåŒ–çš„ mix
      vec3 toneMapped = boosted + (aces - boosted) * toneWeight;
      
      // 4. æœ€çµ‚åˆæˆï¼ˆå–®ä¸€ MAD + clampï¼‰
      return clamp(toneMapped + bloom, 0.0, 1.0);
    }
  #endif

  #if USE_BLEACH_COLOR
    // âš¡âš¡ æ¥µé™å„ªåŒ–ï¼šä½¿ç”¨ MAD (Multiply-Add)ï¼Œæ¸›å°‘æŒ‡ä»¤
    vec3 bleach(vec3 oldColor, float lerpValue, vec3 normal, mediump vec3 viewDir) {
      mediump float theta = 1.0 - clamp(dot(normal, viewDir), 0.0, 1.0);
      mediump float factor = lerpValue * pow(theta, 2.7);
      // MAD å„ªåŒ–: a + b * c æ˜¯å–®ä¸€ GPU æŒ‡ä»¤
      return oldColor + (bleachColor.rgb * 1.7 - oldColor) * factor;
    }
  #endif

  #if USE_RIM_LIGHT
    // âš¡âš¡âš¡âš¡ çµ‚æ¥µå„ªåŒ–ï¼šç§»é™¤è²¼åœ–æ¡æ¨£ï¼Œåªç”¨é¡è‰²ï¼ˆæ¸›å°‘ç´‹ç†æ¡æ¨£ï¼‰
    vec3 applyRimLight(vec3 baseColor, vec3 normal, mediump vec3 viewDir) {
      // ä¿æŒåŸç‰ˆè¨ˆç®—æ–¹å¼
      mediump float rimValue = 1.0 - clamp(dot(normal, viewDir), 0.0, 1.0);
      rimValue = pow(rimValue, 1.0 / max(rimPower, 0.01));
      
      // âš¡âš¡ ç›´æ¥ä½¿ç”¨é¡è‰²ï¼Œç„¡éœ€è²¼åœ–æ¡æ¨£ï¼ˆæ•ˆèƒ½æå‡ï¼ï¼‰
      mediump float rimStrength = rimValue * rimIntensity;
      
      // âš¡ MAD å„ªåŒ–ï¼šå‘é‡åŒ–ä¹˜æ³•ï¼ˆå–®ä¸€æŒ‡ä»¤ï¼‰
      return baseColor + rimLightColor.rgb * rimStrength;
    }
  #endif

  vec4 frag () {
    vec4 o = mainColor;
    o.rgb *= colorScaleAndCutoff.xyz;

    #if USE_INSTANCING
      o.a *= (1.0 - v_custom_color_ctrl.x);  
    #endif

    #if USE_VERTEX_COLOR
      o.rgb *= SRGBToLinear(v_color.rgb);
      o.a *= v_color.a;
    #endif

    #if USE_TEXTURE
      vec4 rawTexColor = texture(mainTexture, v_uv);
      rawTexColor.rgb = SRGBToLinear(rawTexColor.rgb);
      o *= rawTexColor;
    #endif

    // âš¡âš¡ æ¥µé™å„ªåŒ–ï¼šåªåœ¨éœ€è¦æ™‚è¨ˆç®—æ³•ç·šï¼Œä½¿ç”¨ mediump æ¸›å°‘é‹ç®—é‡
    #if USE_NORMAL_MAP || USE_MATCAP || USE_MATCAP_ADD || USE_RIM_LIGHT || USE_BLEACH_COLOR
      mediump vec3 finalNormal = normalize(v_worldNormal);
      
      #if USE_NORMAL_MAP
        mediump vec3 nmmp = texture(normalMap, v_uv).xyz - vec3(0.5);
        // âš¡âš¡ MAD å„ªåŒ–ï¼šæå‰è¨ˆç®— bitangentï¼Œä½¿ç”¨ fma (Fused Multiply-Add)
        mediump vec3 bitangent = cross(v_worldNormal, v_tangent.xyz) * v_tangent.w;
        mediump vec3 normalOffset = v_tangent.xyz * (nmmp.x * normalStrength);
        normalOffset += bitangent * (nmmp.y * normalStrength);
        normalOffset += v_worldNormal * nmmp.z;
        finalNormal = normalize(normalOffset);
      #endif
    #endif

    // âš¡âš¡ æ¥µé™å„ªåŒ–ï¼šè¨ˆç®—å…±ç”¨çš„è¦–åœ–å‘é‡å’Œè¦–åœ–æ³•ç·šï¼ˆmediump + å‘é‡åŒ–ï¼‰
    #if USE_MATCAP || USE_MATCAP_ADD
      mediump vec3 viewNormal = normalize(mat3(cc_matView) * finalNormal);
      // âš¡ å‘é‡åŒ–è¨ˆç®— UVï¼ˆå–®ä¸€ MAD æŒ‡ä»¤ï¼‰
      mediump vec2 matcapUV = viewNormal.xy * vec2(0.5, -0.5) + vec2(0.5);
    #endif
    
    // âš¡ é è¨ˆç®—å…±ç”¨çš„ viewDirï¼ˆåªè¨ˆç®—ä¸€æ¬¡ï¼‰
    #if USE_MATCAP || USE_RIM_LIGHT || USE_BLEACH_COLOR
      mediump vec3 viewDir = normalize(cc_cameraPos.xyz - v_worldPos);
    #endif

    #if USE_MATCAP
      vec3 matcapColor = SRGBToLinear(texture(matcapTexture, matcapUV).rgb);

      #if !CC_USE_HDR
        matcapColor *= matcapLDRBoost;
      #endif

      // âš¡âš¡ æ¥µé™å„ªåŒ–ï¼šMAD + saturate å–ä»£ clampï¼Œæ¸›å°‘åˆ†æ”¯
      mediump float edgeValue = 1.0 - dot(viewDir, finalNormal);
      mediump float blendFactor = clamp(edgeValue * matcapProgress * 3.0, 0.0, 1.0);
      // MAD å„ªåŒ–: lerp(a, b, t) = a + (b - a) * t
      o.rgb += (matcapColor - o.rgb) * blendFactor;
    #endif

    #if USE_MATCAP_ADD
      vec3 matcapAddSample = SRGBToLinear(texture(matcapAddTexture, matcapUV).rgb);
      
      #if !CC_USE_HDR
        matcapAddSample *= matcapAddLDRBoost;
      #endif
      
      // âš¡ åˆä½µä¹˜æ³•é‹ç®—
      o.rgb += matcapAddSample * (matcapAddColor.rgb * matcapAddStrength);
    #endif

    #if USE_RIM_LIGHT
      o.rgb = applyRimLight(o.rgb, finalNormal, viewDir);
    #endif

    #if USE_ALPHA_TEST
      // âš¡ discard å¾ˆæ˜‚è²´ï¼Œä½†ç„¡æ³•é¿å…
      if (o.ALPHA_TEST_CHANNEL < colorScaleAndCutoff.w) discard;
    #endif

    #if USE_BLEACH_COLOR
      #if USE_INSTANCING
        // âš¡âš¡ å„ªåŒ–åˆ†æ”¯ï¼šä½¿ç”¨ step é¿å… ifï¼ˆä½†ä¿ç•™ if å› ç‚ºå¯èƒ½è·³éè¨ˆç®—ï¼‰
        if (v_custom_color_ctrl.y > 0.0) o.rgb = bleach(o.rgb, v_custom_color_ctrl.y, finalNormal, viewDir);
      #else
        if (bleachColor.w > 0.0) o.rgb = bleach(o.rgb, bleachColor.w, finalNormal, viewDir);
      #endif
    #endif

    // âš¡âš¡âš¡âš¡ æ‡‰ç”¨ç°¡åŒ–çš„ HDR æ•ˆæœï¼ˆæ¢ä»¶ç·¨è­¯ï¼‰
    #if USE_HDR_SIMULATION
      o.rgb = applyHDRSimulation(o.rgb);
    #endif

    #if CC_USE_FOG != CC_FOG_NONE
      #if CC_USE_HDR
        o.rgb = ACESToneMap(o.rgb);
      #endif
      o.rgb = LinearToSRGB(o.rgb);
      CC_APPLY_FOG(o, v_worldPos.xyz);
      return o;
    #else
      return CCFragOutput(o);
    #endif
  }
}%


CCProgram shadow-caster-vs %{
  precision highp float;
  #include <legacy/input>
  #include <builtin/uniforms/cc-global>
  #include <legacy/decode-base>
  #include <legacy/local-batch>
  #include <builtin/uniforms/cc-shadow>

  #if USE_TEXTURE
    out vec2 v_uv;
    uniform TexCoords {
      vec4 tilingOffset;
    };
  #endif
  out vec4 v_worldPos;
  out highp vec2 v_clip_depth;

  vec4 vert () {
    vec4 position;
    CCVertInput(position);

    mat4 matWorld, matWorldIT;
    CCGetWorldMatrixFull(matWorld, matWorldIT);

    v_worldPos = matWorld * position;
    vec4 clipPos = cc_matLightViewProj * v_worldPos;

    #if USE_TEXTURE
      v_uv = a_texCoord * tilingOffset.xy + tilingOffset.zw;
      #if SAMPLE_FROM_RT
        CC_HANDLE_RT_SAMPLE_FLIP(v_uv);
      #endif
    #endif

    v_clip_depth = clipPos.zw;

    return clipPos;
  }
}%


CCProgram shadow-caster-fs %{
  precision highp float;
  #include <legacy/output-standard>
  #include <common/data/packing>
  #include <legacy/shadow-map-base>

  #if USE_ALPHA_TEST
    #pragma define-meta ALPHA_TEST_CHANNEL options([a, r, g, b])
  #endif

  #if USE_TEXTURE
    in vec2 v_uv;
    uniform sampler2D mainTexture;
  #endif
  in vec4 v_worldPos;
  in highp vec2 v_clip_depth;

  uniform Constant {
    vec4 mainColor;
    vec4 colorScaleAndCutoff;
  };

  vec4 frag () {
    vec4 o = mainColor;

    #if USE_ALPHA_TEST
      #if USE_TEXTURE
        o *= texture(mainTexture, v_uv);
      #endif
      if (o.ALPHA_TEST_CHANNEL < colorScaleAndCutoff.w) discard;
    #endif

    highp float clipDepth = v_clip_depth.x / v_clip_depth.y * 0.5 + 0.5;
    if(cc_shadowLPNNInfo.x > 0.000001 && cc_shadowLPNNInfo.x < 1.999999) {
      #if CC_SHADOWMAP_USE_LINEAR_DEPTH
        clipDepth = CCGetLinearDepth(v_worldPos.xyz);
      #endif
    }

    #if CC_SHADOWMAP_FORMAT == SHADOWMAP_FORMAT_RGBA8
      return packDepthToRGBA(clipDepth);
    #else
      return vec4(clipDepth, 1.0, 1.0, 1.0);
    #endif
  }
}%